{
  "name": "HTML-CSS-JS (Auto Live Preview, Integrated)",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Live Preview",
      "onAutoForward": "openBrowser"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.live-server",
        "esbenp.prettier-vscode",
        "formulahendry.auto-close-tag",
        "formulahendry.auto-rename-tag"
      ],
      "settings": {
        "livePreview.defaultPreviewPath": "index.html",
        "livePreview.serverPortNumber": 3000,
        "livePreview.openPreviewTarget": "Integrated"
      }
    }
  },
  "postCreateCommand": "chmod +x .devcontainer/start-live-preview.sh",
  "postStartCommand": "bash .devcontainer/start-live-preview.sh"
}
