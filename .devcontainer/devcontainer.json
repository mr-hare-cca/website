{
  "name": "HTML-CSS-JS (Integrated Preview, Auto)",
  "build": { "dockerfile": "Dockerfile" },

  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Web Preview",
      "onAutoForward": "openPreview"  // âœ… opens in-editor, not a new browser tab
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "formulahendry.auto-close-tag",
        "formulahendry.auto-rename-tag"
      ],
      "settings": {
        // Keep preview inside VS Code when a port is opened
        "remote.autoForwardPortsSource": "hybrid"
      }
    }
  },

  // Make sure the task can run (install dev server once)
  "postCreateCommand": "npm i -g browser-sync",

  // Open the entry file once VS Code is attached (safe; no --command)
  "postAttachCommand": "code --reuse-window index.html"
}
