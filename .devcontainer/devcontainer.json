{
  "name": "HTML-CSS-JS (with Live Preview)",
  "build": { "dockerfile": "Dockerfile" },
  "forwardPorts": [3000],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.livepreview",         
        "esbenp.prettier-vscode",
        "formulahendry.auto-close-tag",
        "formulahendry.auto-rename-tag"
      ],
      "settings": {
        "livePreview.defaultPreviewPath": "index.html",
        "livePreview.serverPortNumber": 3000,
        "livePreview.openPreviewTarget": "Integrated"
      }
    }
  },
  "postAttachCommand": "code --reuse-window index.html"
}
