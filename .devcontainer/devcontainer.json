{
  "name": "HTML-CSS-JS (Auto Live Preview, Integrated)",
  "build": { "dockerfile": "Dockerfile" },

  "forwardPorts": [3000],

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.live-server",
        "esbenp.prettier-vscode",
        "formulahendry.auto-close-tag",
        "formulahendry.auto-rename-tag"
      ],
      "settings": {
        "livePreview.defaultPreviewPath": "index.html",
        "livePreview.serverPortNumber": 3000,
        "livePreview.openPreviewTarget": "Integrated"   // keep preview in-editor
      }
    }
  },

  // Ensure the script is executable on first build
  "postCreateCommand": "chmod +x .devcontainer/start-live-preview.sh",

  // ðŸ”‘ Run UI commands only after VS Code attaches to the container
  "postAttachCommand": "bash .devcontainer/start-live-preview.sh"
}
