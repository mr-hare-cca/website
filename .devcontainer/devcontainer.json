{
  "name": "HTML-CSS-JS (Integrated Live Preview)",
  "build": { "dockerfile": "Dockerfile" },
  "forwardPorts": [3000],

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.livepreview",          // ✅ In-editor Live Preview (not external)
        "esbenp.prettier-vscode",
        "formulahendry.auto-close-tag",
        "formulahendry.auto-rename-tag"
      ],
      "settings": {
        "livePreview.defaultPreviewPath": "index.html",
        "livePreview.serverPortNumber": 3000,
        "livePreview.openPreviewTarget": "Integrated"  // ✅ keep it inside VS Code
      }
    }
  },

  "postCreateCommand": "chmod +x .devcontainer/start-live-preview.sh",
  "postAttachCommand": "bash .devcontainer/start-live-preview.sh"
}
