{
  "name": "HTML-CSS-JS (Integrated Preview, Auto)",
  "build": { "dockerfile": "Dockerfile" },

  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Web Preview",
      "onAutoForward": "openPreview"  // open in-editor, not external
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.livepreview",          // âœ… Microsoft Live Preview (installed)
        "esbenp.prettier-vscode",
        "formulahendry.auto-close-tag",
        "formulahendry.auto-rename-tag"
      ],
      "settings": {
        "livePreview.defaultPreviewPath": "index.html",
        "livePreview.serverPortNumber": 3000,
        "livePreview.openPreviewTarget": "Integrated",
        "remote.autoForwardPortsSource": "hybrid"
      }
    }
  },

  "postCreateCommand": "npm i -g browser-sync",
  "postAttachCommand": "code --reuse-window index.html"
}
